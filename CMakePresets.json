{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "vcpkg-win64-static",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      }
    },
    {
      "name": "dev-mode",
      "hidden": true,
      "cacheVariables": {
        "EXAGE_DEVELOPER_MODE": "ON",
        "VCPKG_MANIFEST_FEATURES": "test"
      }
    },
    {
      "name": "cppcheck",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CPPCHECK": "cppcheck;--inline-suppr"
      }
    },
    {
      "name": "clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--header-filter=^${sourceDir}/"
      }
    },
    {
      "name": "std",
      "description": "This preset makes sure the project actually builds with at least the specified standard",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "ninja",
      "hidden": true,
      "generator": "Ninja",
      "inherits": [
        "dev-mode"
      ]
    },
    {
      "name": "flags-msvc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-W4 -permissive- -utf-8 -volatile:iso -Zc:__cplusplus -EHsc -wd4324 -DNOMINMAX"
      }
    },
    {
      "name": "flags-gcc-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wconversion -Wsign-conversion -Wcast-qual -Wshadow -Wformat=2 -Wundef -Werror=float-equal"
      }
    },
    {
      "name": "flags-sanitizer-msvc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-W4 -permissive- -utf-8 -volatile:iso -Zc:__cplusplus -EHsc -fsanitize=address -wd4324 -D_DISABLE_VECTOR_ANNOTATION -D_DISABLE_STRING_ANNOTATION"
      }
    },
    {
      "name": "ci",
      "description": "This preset is used for CI. Select flags in user presets",
      "hidden": true,
      "inherits": [
        "dev-mode",
        "std",
        "ninja"
      ]
    }
  ]
}